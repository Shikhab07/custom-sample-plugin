<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-sample"
        version="1.0.0">
    <name>SamplePlugin</name>
    <description>Cordova Sample Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova, sample, plugin</keywords>
    <engines>
        <engine name="cordova" version=">=9.0.0" />
    </engines>
    <platform name="android" xmlns:tools="http://schemas.android.com/tools">
        <edit-config file="AndroidManifest.xml" target="/manifest/uses-permission[@android:name='android.permission.READ_MEDIA_IMAGES']" mode="remove" />
        <edit-config file="AndroidManifest.xml" target="/manifest/uses-permission[@android:name='android.permission.READ_MEDIA_VIDEO']" mode="remove" />

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="SamplePlugin">
                <param name="android-package" value="com.example.sampleplugin.SamplePlugin" />
            </feature>
        </config-file>
        <source-file src="src/android/SamplePlugin.java" target-dir="src/com/example/sampleplugin" />
       
    </platform>
    <js-module src="www/sample.js" name="SamplePlugin">
        <clobbers target="samplePlugin" />
    </js-module>
</plugin>
